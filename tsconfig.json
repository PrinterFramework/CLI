{
    "compilerOptions": {
        "outDir": "dist",
        "moduleResolution": "node",
        "target": "ES5",
        "module": "CommonJS",
        "lib": ["ESNext"],
        "baseUrl": "src",
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "strict": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.template",
        "test/**/*.ts"
    ]
  }
